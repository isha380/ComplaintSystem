@model LoginModel
<h2>Register</h2>

<form asp-action="Register" method="post">
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
    </div>
    <button type="submit">Register</button>
</form>

<p style="color:red">@ViewBag.Message</p>

<a asp-action="Login">Back to Login</a>
