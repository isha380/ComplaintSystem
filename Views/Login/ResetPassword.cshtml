@model Complain.Models.ResetPasswordViewModel

@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Reset Password";
}



<div class="form-wrapper">
  <div class="form-container">
    <h2>Reset Your Password</h2>

    <form asp-action="ResetPassword" method="post" novalidate>
      <input type="hidden" asp-for="Email" />
      <input type="hidden" asp-for="Token" />

      <div class="form-group">
        <label asp-for="NewPassword">New Password</label>
        <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
      </div>

      <button type="submit" class="btn btn-primary">Reset Password</button>
    </form>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
