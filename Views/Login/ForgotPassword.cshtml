@model Complain.Models.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Forgot Password";
}





<div class="form-wrapper">
  <div class="form-container">
    <h2>Forgot Password</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            Reset link: <a href="@TempData["Success"]" style="color: #b19cd9;">Click to reset</a>
        </div>
    }

    <form asp-action="ForgotPassword" method="post" novalidate>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" autocomplete="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Send Reset Link</button>
    </form>

    <a asp-action="Login" class="btn btn-link">Back to Login</a>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
